{
  "name": "easyrecruit",
  "version": "1.0.0",
  "description": "Système de recrutement innovant via WhatsApp avec agent IA conversationnel",
  "main": "electron/main.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "lint": "eslint src --ext .ts",
    "test": "vitest",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "electron-builder",
    "electron:build:win": "electron-builder --win",
    "electron:build:all": "electron-builder -mwl",
    "build:all": "npm run build && cd frontend && npm run build && cd ..",
    "dist": "npm run build:all && npm run electron:build:win"
  },
  "keywords": [
    "recrutement",
    "whatsapp",
    "ai",
    "chatbot"
  ],
  "author": "Maolys",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votre-username/easyrecruit.git"
  },
  "homepage": "https://github.com/votre-username/easyrecruit#readme",
  "build": {
    "appId": "com.maolys.easyrecruit",
    "productName": "EasyRecruit",
    "copyright": "Copyright © 2024 Maolys",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "frontend/.next/**/*",
      "frontend/public/**/*",
      "frontend/package.json",
      "node_modules/**/*",
      "prisma/**/*",
      "electron/**/*",
      "package.json",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "EasyRecruit-Installer-${version}-${arch}.${ext}",
      "publisherName": "Maolys"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EasyRecruit",
      "include": "build/installer.nsh",
      "license": "LICENSE.txt",
      "warningsAsErrors": false
    },
    "publish": {
      "provider": "github",
      "owner": "votre-username",
      "repo": "easyrecruit",
      "releaseType": "release",
      "private": false
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "langchain": "^0.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "redis": "^4.6.11",
    "twilio": "^4.19.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
